apiVersion: apps/v1
kind: Deployment
metadata:
  name: airgap-utility1
  labels:
    app: airgap-utility
spec:
  selector:
    matchLabels:
      app: airgap-utility
  template:
    metadata:
      labels:
        app: airgap-utility
    spec:
      containers:
      - name: airgap-utility1
        image: registry.suse.com/bci/bci-base
        env:
        - name: https_proxy
          value: {{ proxy_url_https }}
        - name: http_proxy
          value: {{ proxy_url_http }}
        - name: no_proxy
          value: {{ airgap_noproxy }}
        command: ["/bin/sh"]
        args: ["-c", "sleep infinity"]
        resources: {}
      restartPolicy: Always
      dnsPolicy: ClusterFirst

